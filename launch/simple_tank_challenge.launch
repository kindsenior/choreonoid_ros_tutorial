<launch>
  <arg name="cnoid_file" default="$(find choreonoid_ros_tutorial)/project/ros_tank_athletic.cnoid" />

  <param name="use_sim_time" value="true" />
  <param name="robot_description" textfile="$(find choreonoid_tutorial)/models/SimpleTank.urdf" />

  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher" output="screen">
    <remap from="joint_states" to="/SimpleTank/joint_state" />
  </node>

  <node pkg="teleop_twist_keyboard" name="keyboard_teleop" type="teleop_twist_keyboard.py"
        output="screen" launch-prefix="xterm -e"/>
  <node pkg="choreonoid_ros" name="choreonoid" type="choreonoid"
        args="$(arg cnoid_file) --start-simulation">
  </node>
</launch>
